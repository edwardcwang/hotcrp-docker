defaults
port 587
tls on
tls_starttls on

# Define a mail account at a freemail service
account freemail
# Host name of the SMTP server
host example.localdomain
# Envelope-from address
from sender@example.localdomain
# Authentication
auth on
user sender
password smtp_password_here

# Set a default account
account default : freemail

# Logs
logfile /var/log/msmtp.log
